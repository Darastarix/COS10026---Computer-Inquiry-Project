h1 {color:yellow; font-size: 2em; font-weight:bold; font-style: italic;}

nav a {text-decoration: none; padding: 0.2em 0.6em; border: 4px solid #ccc;}
nav a:hover {background-color:yellow; border-color: white;}
p:hover {background-color:orange;}

body{ background-image: url("internet.jpg");
background-repeat: no-repeat;
background-size: 100%;
background-attachment: fixed;
float: center

}
fieldset {
	margin : 2em 0;
	padding : 1em 2em;
	border : solid 1px; color : red;
	border-radius: 6px;
	min-width: 200px;
}
legend { font-size: 1.25em;	
padding: 0 .25em;
	color: green;
}
label { display: block;
margin-top: 1em;
}
.checks label{ margin-top: 0;}
label:first-of-type{ margin-top: 0;}
textarea{ min-height: 8em;
min-width: 100%;
padding: .5em;
border: solid 1px colour:red; }
.checks { margin-bottom: 0;}
.checks p {margin-bottom: 0;}
input[type="checkbox"] + label, input[type="radio"] + label 
{ display: inline-blocks;
padding-top: 0;
margin-top: 0;}
input[type="radio"] { margin-left: 1.5 margin-right: 0; }
input[type="radio"]:first-of-type { margin-left: 0; }
input[type="submit"]
{padding: .5em 1em;
border-radius: 6px;
background-color: red;
color: yellow;
font-family: lato, sans-serif;
font-size: .8em; } 

input[type="reset"]
{padding: .5em 1em;
border-radius: 6px;
background-color: red;
color: yellow;
font-family: lato, sans-serif;
font-size: .8em; } 


h2 {color: yellow; font-size: 1.5em; font-weight: bold; }
.foot { color: white
